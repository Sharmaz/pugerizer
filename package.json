{
  "name": "pugerizer",
  "version": "0.1.0",
  "description": "Static Website Framework with Pug",
  "main": "webpack.config.js",
  "scripts": {
    "build:dev": "webpack-dev-server --mode development --config ./webpack.dev.config.js",
    "build:prod": "webpack -p --mode production --env.NODE_ENV=production",
    "server:prod": "npm run build:prod && babel-node --presets @babel/preset/env server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sharmaz/pugerizer.git"
  },
  "keywords": [
    "Pug"
  ],
  "author": "Ivan Robles <irae45@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sharmaz/pugerizer/issues"
  },
  "homepage": "https://github.com/Sharmaz/pugerizer#readme",
  "dependencies": {
    "express": "^4.16.4",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-string-replace-plugin": "^1.1.0",
    "mini-css-extract-plugin": "^0.6.0",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.4.0",
    "resolve-url-loader": "^3.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  }
}
